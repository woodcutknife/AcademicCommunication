= simple_form_for([@contest_category, @contest, @page]) do |f|
  = f.input :title, required: true, autofocus: true, input_html: { class: 'form-control' }
  = f.input :slug, required: true, input_html: { class: 'form-control' }
  %label.checkbox
    = f.input :default, as: :boolean
  %label.checkbox
    = f.input :visible, as: :boolean
  = f.input :content, input_html: { class: 'form-control' }
  %br
  = f.submit class: 'btn btn-primary'
  = link_to 'Cancel', contest_category_contest_path(@contest_category, @contest), class: 'btn btn-default'
