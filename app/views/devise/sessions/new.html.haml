.container
  = simple_form_for(resource_name, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f|
    %h2.form-signin-heading Please sign in
    = f.input :email, label: false, required: true, autofocus: true, placeholder: 'Email address', input_html: { class: 'form-control' }
    = f.input :password, label: false, required: true, placeholder: 'Password', input_html: { class: 'form-control' }
    %label.checkbox
      = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
    = f.button :submit, 'Sign in', class: 'btn btn-lg btn-primary btn-block'
    %br
    = render 'devise/shared/links'
