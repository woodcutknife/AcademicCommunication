.row
  .col-sm-4.col-sm-offset-4
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification
      %h2= "Edit #{resource_name.to_s}"
      = f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p 
          Currently waiting confirmable for:
          = resource.unconfirmed_email
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't wang to change it", required: false, input_html: { class: 'form-control' }
      = f.input :password_confirmation, required: false, input_html: { class: 'form-control' }
      = f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: 'form-control' }
      %br
      = f.submit class: 'btn btn-primary'
    %hr
    %h3 Cancel my account
    %p Unhappy?
    = link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-danger'
    %br
    %br
    = link_to "Back", :back
